{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./src",
        "sourceMap": true,
        "allowJs": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "lib",
        "dist",
        "node_modules",
        "**/*.spec.ts"
    ]
}